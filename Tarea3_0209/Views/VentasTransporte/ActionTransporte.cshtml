@model Tarea3_0209.Models.Transporte

@{
    ViewBag.Title = "ActionTransporte";
}

<h2>ActionTransporte</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">

        <div class="form-group">
            @Html.Label("Numero", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model._numero, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>
        <div class="form-group">
            @Html.Label("Fecha", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model._fecha, "{0:dd/MM/yyyy}", htmlAttributes: new { @class = "for-control col-md-10" })
        </div>
        <div class="form-group">
            @Html.Label("Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model._cliente, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>
        <div class="form-group">
            @Html.Label("Carga", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model._carga, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>
        <div class="form-group">
            @Html.Label("TM", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model._TM, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>

        <div class="form-group">
            @Html.Label("Costo", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBox("Costo", @ViewBag.costo as string, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>

        <div class="form-group">
            @Html.Label("Seguro", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBox("Seguro", @ViewBag.seguro as string, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>

        <div class="form-group">
            @Html.Label("Monto", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBox("Monto", @ViewBag.monto as string, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>

        <div class="form-group">
            @Html.Label("IGV", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBox("IGV", @ViewBag.IGV as string, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>

        <div class="form-group">
            @Html.Label("Monto Total", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBox("MontoTotal", @ViewBag.MontoTotal as string, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>

        <div class="form-group">
            @Html.ActionLink("Nuevo", "ActionTransporte", null, new { @class = "control-label col-md-2" })
            <input type="submit" value="Procesar" class="btn btn-default" />
        </div>
    </div>
}
